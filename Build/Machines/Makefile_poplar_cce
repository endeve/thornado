## Makefile definitions for Poplar with CCE compiler

C       = CC
FORTRAN = ftn
FLINKER = ftn

DEBUG    = -G0 -eD -hfp0 -K trap=fp -h heap_allocate
OPTIMIZE = -h heap_allocate

SUFFIX_f90 =

MDEFS =
PP    = -D

ifeq ($(USE_OMP),TRUE)
  OPENMP = -fopenmp
else ifeq ($(USE_OMP_OL),TRUE)
  OPENMP = -fopenmp
endif

ifeq ($(USE_OACC),TRUE)
  OPENACC = -hacc
endif

INCLUDE_CUDA     = -I$(CUDA_ROOT)/include

## Makefile definitions for mcarpe21

C       = mpic++ --c++11
FORTRAN = mpiifort
FLINKER = mpiifort

DEBUG    = -g
OPTIMIZE = -g -O2

SUFFIX_f90 =

MDEFS =
PP    = -D

ifeq ($(USE_OMP),TRUE)
  OPENMP = -fopenmp
else ifeq ($(USE_OMP_OL),TRUE)
  OPENMP = -fopenmp
endif

ifeq ($(USE_OACC),TRUE)
  OPENACC = -fopenacc
endif

INCLUDE_CUDA     =
INCLUDE_HDF5     = -I/opt/hdf5/include
INCLUDE_LAPACK   =
INCLUDE_MAGMA    =
INCLUDE_PETSC    =
INCLUDE_POSEIDON =
INCLUDE_ROCM     =

LIBRARIES_CUDA     =
LIBRARIES_HDF5     = -L/opt/hdf5/lib -lhdf5_fortran -lhdf5
LIBRARIES_LAPACK   = -L/usr/lib/lapack -llapack -L/usr/lib/libblas -lblas
LIBRARIES_MAGMA    =
LIBRARIES_PETSC    =
LIBRARIES_POSEIDON =
LIBRARIES_ROCM     =
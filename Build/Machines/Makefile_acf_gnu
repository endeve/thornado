## Makefile definitions for ACF with GNU compiler

C       = mpic++ --c++11
FORTRAN = mpif90 -cpp
FLINKER = mpif90

DEBUG    = -g -fbacktrace -ffpe-trap=invalid,zero -fbounds-check
OPTIMIZE = -g -O2

SUFFIX_f90 =

MDEFS =
PP    = -D

ifeq ($(USE_OMP),TRUE)
  OPENMP = -fopenmp
else ifeq ($(USE_OMP_OL),TRUE)
  OPENMP = -fopenmp
endif

ifeq ($(USE_OACC),TRUE)
  OPENACC = -fopenacc
endif

INCLUDE_CUDA     =
INCLUDE_HDF5     = $(HDF5_INC)
INCLUDE_LAPACK   =
INCLUDE_MAGMA    =
INCLUDE_PETSC    =
INCLUDE_POSEIDON =
INCLUDE_ROCM     =

LIBRARIES_CUDA     =
LIBRARIES_HDF5     = $(HDF5_LIB) -lhdf5_fortran -lhdf5
LIBRARIES_LAPACK   = $(LAPACK_LIB) -llapack -lblas
LIBRARIES_MAGMA    =
LIBRARIES_PETSC    =
LIBRARIES_POSEIDON =
LIBRARIES_ROCM     =
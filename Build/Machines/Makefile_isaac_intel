## Makefile definitions for ISAAC with intel compilers

C       = mpicxx --c++11
FORTRAN = mpiifort -cpp
FLINKER = mpiifort

DEBUG    = -g -fbacktrace -ffpe-trap=invalid,zero -fbounds-check
OPTIMIZE = -g -O2

SUFFIX_f90 =

MDEFS =
PP    = -D

ifeq ($(USE_OMP),TRUE)
  OPENMP = -fopenmp
else ifeq ($(USE_OMP_OL),TRUE)
  OPENMP = -fopenmp
endif

ifeq ($(USE_OACC),TRUE)
  OPENACC = -fopenacc
endif

INCLUDE_CUDA     =
INCLUDE_HDF5     = -I$(HDF5_DIR)/include
INCLUDE_LAPACK   =
INCLUDE_MAGMA    =
INCLUDE_PETSC    =
INCLUDE_ROCM     =

LIBRARIES_CUDA     =
LIBRARIES_HDF5     = -L$(HDF5_DIR)/lib -lhdf5_fortran -lhdf5
LIBRARIES_LAPACK   = -L$(LAPACK_DIR)/lib64 -llapack -lblas
LIBRARIES_MAGMA    =
LIBRARIES_PETSC    =
LIBRARIES_ROCM     =

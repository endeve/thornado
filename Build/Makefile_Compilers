      DEFINES   += $(PP)-DTHORNADO_OMP_OL
   endif
   ifeq ($(USE_MAGMA),TRUE)
      INCLUDE   += $(INCLUDE_MAGMA)
      LIBRARIES += $(LIBRARIES_MAGMA)
      DEFINES   += $(PP)-DTHORNADO_LA_MAGMA
   else ifeq ($(USE_CUBLAS),TRUE)
      DEFINES   += $(PP)-DTHORNADO_LA_CUBLAS
   endif
else
   ifeq ($(USE_OMP),TRUE)
      DEFINES   += $(PP)-DTHORNADO_OMP

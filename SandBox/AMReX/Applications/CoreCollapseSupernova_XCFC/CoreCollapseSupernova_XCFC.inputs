poseidon.fem_degree        = 1
poseidon.l_limit           = 0
poseidon.max_fp_iters      = 20
poseidon.anderson_m        = 3
poseidon.converge_criteria = 1.0e-08

# Slope limiter parameters (Euler)
SL.UseSlopeLimiter_Euler           = 1
SL.SlopeLimiterMethod_Euler        = "TVD"
